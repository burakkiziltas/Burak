@model deneme.Northwind.MvcWebUI.Models.CartListViewModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Your Cart</h2>
<table class="table">
    <tr>
        <td>Product Name</td>
        <td>Unit Price</td>
        <td>Unit In Stock</td>
        <td>Quantity</td>
        <td></td>
    </tr>
    @foreach (var item in Model.Cart.CartLines)
    {
<tr>
    <td> @item.Product.ProductName</td>
    <td> @item.Product.UnitPrice</td>
    <td> @item.Product.UnitsInStock</td>
    <td> @item.Quantity</td>
    <td class="text-right">
        <a class="btn btn-xs btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.Product.ProductId">Delete</a>
    </td>
</tr>
    }
<tr>
    <td></td>
    <td></td>
    <td></td>
    <td class="text-right">
        <h3>
            <strong>@Model.Cart.Total</strong>
        </h3>
    </td>
</tr>
<tr>
    <td></td>
    <td></td>
    <td></td>
    <td>
        <a asp-controller="Product" asp-action="Index" class="btn btn-xs btn-default">Continue Shopping</a>  
    </td>
    <td class="text-right">
        <a asp-controller="Cart" asp-action="Complete" class="btn btn-xs btn-success">Go To Checkout</a> 
    </td>
</tr>
</table>

